// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  internalId String   @unique
  email      String   @unique
  surname    String
  givenName  String
  role       UserRole
}

enum LogoType {
  LIGHT
  DARK
}

enum UserRole {
  SUPERADMIN
  ADMIN
  USER
}

enum MembershipRole {
  LEADER
  MEMBER
  NEWBIE
  SENIOR
}
